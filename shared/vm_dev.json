{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "vmName": {
            "type": "string"
        },
        "vmSize": {
            "type": "string"
        },
        "adminPassword": {
            "type": "string"
        },
        "imageSku": {
            "type": "string"
        },
        "availabilitySetId": {
            "type": "string"
        },
        "storageAccountEndpoint": {
            "type": "string"
        },
        "interfaceRefWan": {
            "type": "string"
        },
        "interfaceRefLan": {
            "type": "string"
        },
        "devFwBlobUrlPrefix": {
            "type": "string"
        }
    },
    "variables": {
        "imagePublisher": "sophos",
        "imageOffer": "sophos-xg",
        "adminUsername": "azureuser",
        "sshKeyPath": "[concat('/home/',variables('adminUsername'),'/.ssh/authorized_keys')]",
        "vhdContainer": "vhds"
    },
    "resources": [
       {
            "apiVersion": "2017-03-30",
            "type": "Microsoft.Compute/images",
            "name": "disks",
            "location": "[resourceGroup().location]",
            "properties": {
                "storageProfile": {
                    "osDisk": {
                        "osType": "Linux",
                        "osState": "Generalized",
                        "caching": "ReadWrite",
                        "blobUri": "[concat(parameters('devFwBlobUrlPrefix'),'-prim.vhd')]",
                        "storageAccountType": "Standard_LRS"
                    },
                    "dataDisks": [{
                        "caching": "ReadWrite",
                        "blobUri": "[concat(parameters('devFwBlobUrlPrefix'),'-aux.vhd')]",
                        "lun": 0,
                        "storageAccountType": "Standard_LRS"
                    }]
                }
            }
        },
        {
            "apiVersion": "2017-03-30",
            "type": "Microsoft.Compute/virtualMachines",
            "name": "[parameters('vmName')]",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[resourceId('Microsoft.Compute/images/', 'disks')]"
            ],
            "properties": {
                "availabilitySet": {
                    "id": "[parameters('availabilitySetId')]"
                },
                "hardwareProfile": {
                    "vmSize": "[parameters('vmSize')]"
                },
                "osProfile": {
                    "computerName": "[parameters('vmName')]",
                    "adminUsername": "[variables('adminUsername')]",
                    "adminPassword": "[parameters('adminPassword')]"
                },
                "storageProfile": {
                    "imageReference": {
                        "id": "[resourceId('Microsoft.Compute/images/', 'disks')]"
                    },
                    "dataDisks": [
                        {
                            "name": "[concat(parameters('vmName'),'-dataDisk')]",
                            "lun": 0,
                            "createOption": "FromImage"
                        }
                    ],
                    "osDisk": {
                        "name": "[concat(parameters('vmName'),'-osDisk')]",
                        "caching": "ReadWrite",
                        "createOption": "FromImage"
                    }
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[parameters('interfaceRefWan')]",
                            "properties": {
                                "primary": true
                            }
                        },
                        {
                            "id": "[parameters('interfaceRefLan')]",
                            "properties": {
                                "primary": false
                            }
                        }
                    ]
                },
                "diagnosticsProfile": {
                    "bootDiagnostics": {
                        "enabled": "true",
                        "storageUri": "[parameters('storageAccountEndpoint')]"
                    }
                }
            }
        }
    ]
}
